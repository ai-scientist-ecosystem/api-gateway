# Environment variables for AI Scientist Ecosystem Development
# Copy this file to .env and modify values as needed

# ===== PostgreSQL Configuration =====
POSTGRES_DB=ai_scientist
POSTGRES_USER=ai_user
POSTGRES_PASSWORD=devpassword_change_in_production

# ===== Redis Configuration =====
REDIS_PASSWORD=devpassword_change_in_production

# Redis Commander UI
REDIS_UI_USER=admin
REDIS_UI_PASSWORD=devpassword_change_in_production

# ===== Eureka Server Configuration =====
EUREKA_USER=admin
EUREKA_PASSWORD=admin

# ===== Config Server Configuration =====
CONFIG_USER=admin
CONFIG_PASSWORD=admin
CONFIG_PROFILE=native
CONFIG_GIT_URI=https://github.com/ai-scientist-ecosystem/config-repo
CONFIG_GIT_BRANCH=main
ENCRYPT_KEY=ai-scientist-secret-key-2025-change-this-in-production

# ===== Grafana Configuration =====
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ===== Application Configuration =====
SPRING_PROFILES_ACTIVE=development

# ===== NASA/NOAA API Keys =====
# Get from https://api.nasa.gov/
NASA_API_KEY=your_nasa_api_key_here
NOAA_API_KEY=your_noaa_api_key_here

# ===== Kafka Configuration =====
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ===== Logging =====
LOG_LEVEL=INFO

# ===== Security =====
# Generate random strings for production
JWT_SECRET=dev_jwt_secret_change_in_production
API_KEY=dev_api_key_change_in_production